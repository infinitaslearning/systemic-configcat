{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "types": ["jest"],
    "outDir": "./dist"
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules"]
}
